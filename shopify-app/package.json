{
  "name": "rayochat-shopify-app",
  "version": "1.0.0",
  "description": "RayoChat AI Widget for Shopify - Intelligent customer support chat",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "npm run build:client",
    "build:client": "cd client && npm run build",
    "install:client": "cd client && npm install",
    "docker:build": "docker build -t rayochat-shopify .",
    "docker:run": "docker run -p 3000:3000 rayochat-shopify",
    "ngrok": "ngrok http 3000"
  },
  "dependencies": {
    "@shopify/shopify-api": "^7.7.0",
    "@shopify/shopify-app-express": "^2.1.0",
    "@shopify/shopify-app-session-storage-memory": "^1.1.0",
    "express": "^4.18.2",
    "dotenv": "^16.3.1",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "joi": "^17.11.0",
    "crypto": "^1.0.1",
    "axios": "^1.6.0",
    "sqlite3": "^5.1.6",
    "body-parser": "^1.20.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "@types/node": "^20.8.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "shopify",
    "app",
    "rayochat",
    "ai",
    "chat",
    "widget",
    "customer-support"
  ],
  "author": "Dylan Patriarchi",
  "license": "Proprietary"
}
